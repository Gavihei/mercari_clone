<%= form_for(@item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%# TODO: 画像のプレビュー機能つける %>
    <%= f.label :picture, "画像" %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %><br><br>

    <%= f.label :name, "商品名" %>
    <%= f.text_area :name, placeholder: "40文字まで" %><br><br>

    <%= f.label :content, "商品詳細" %>
    <%= f.text_area :content,
                    placeholder: "商品の説明（必須）
例）　2009年に2万円で購入した財布です。経年劣化で多少の傷はありますがあまり目立ちません" %><br><br>

    <%= f.label :price, "価格" %>
    <%= f.number_field :price, placeholder: "0" %><br><br>

    <%= f.label :category, "カテゴリー" %>
    <%= f.select :category, Item.categories.keys, {include_blank: true} %><br><br>

    <%= f.label :condition, "商品の状態" %>
    <%= f.select :condition, Item.conditions.keys, {include_blank: true} %><br><br>

    <%= f.label :delivery_area, "配送元の地域" %>
    <%= f.select :delivery_area, Item.delivery_areas.keys, {include_blank: true} %><br><br>

    <%= f.label :shipping_fee, "送料" %>
    <%= f.select :shipping_fee, Item.shipping_fees.keys, {include_blank: true} %><br><br>

    <%= f.label :days_to_ship, "発送までの日数" %>
    <%= f.select :days_to_ship, Item.days_to_ships.keys, {include_blank: true} %><br><br>


  </div>
  <%= f.submit "出品", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
    $('#item_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>

<% if current_user.already_liked?(micropost) %>
  <%= form_for(micropost.likes.find_by(micropost_id: micropost.id),method: :delete, remote: true) do |f| %>
    <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
      <%= content_tag :span, micropost.likes.count, class: "glyphicon glyphicon-heart" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(micropost.likes.build, remote: true) do %>
    <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
      <%= content_tag :span, micropost.likes.count, class: "glyphicon glyphicon-heart-empty" %>
    <% end %>
  <% end %>
<% end %>
